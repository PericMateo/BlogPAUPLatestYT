<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.ShortDescription" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body >
    <nav>
        <div>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Racunarstvo">Racunarstvo</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="Menadzment">Menadzment</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="OdrziviRazvoj">Odrzivi Razvoj</a>
            <p >Welcome @User.Identity.Name</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Auth" asp-action="Logout">Log Out</a>

                <a asp-controller="Panel" asp-action="Edit">Create Post</a>

                <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Sign in</a>
            }
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
