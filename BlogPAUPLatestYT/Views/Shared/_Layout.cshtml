<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav>
        <div>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <p>Welcome @User.Identity.Name</p>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Auth" asp-action="Logout">Log Out</a>

                <a asp-controller="Panel" asp-action="Edit">Create Post</a>

                <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Sign in</a>
            }
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
